void imprime_mario(TIPO_FASE mario){  // observação, não sei se não é melhor fazer como tu tava fazendo
    char M[Y_PDR][X_PDR]={{'\\','ô','/'},{'/','H','\\'}};
    int i,j;
    for (i=0;i<Y_PDR;i++){
            gotoxy((mario.coluna_inicial)*3,(mario.linha_inicial)*2+i);
        for (j=0;j<X_PDR;j++){
            printf("%c", M[i][j]);
        }
    }
}

